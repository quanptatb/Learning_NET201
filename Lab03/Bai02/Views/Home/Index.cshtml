@model IEnumerable<Bai02.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h2>FEATURED COLLECTION</h2>
    <p class="text-end"><a href="#">More leicas ></a></p>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4 text-center">
            <div class="card h-100 border-0">
                <a asp-action="Details" asp-route-id="@item.Id">
                    <img src="~/images/@item.ImageName" class="card-img-top" alt="@item.Name"
                        style="max-height: 200px; object-fit: contain;">
                </a>
                <div class="card-body">
                    <h6 class="card-title text-uppercase text-muted" style="font-size: 0.8rem;">LEICA</h6>
                    <h5 class="card-title">
                        <a asp-action="Details" asp-route-id="@item.Id"
                            class="text-dark text-decoration-none">@item.Name</a>
                    </h5>

                    @if (item.SalePrice != null)
                    {
                        <p class="card-text text-danger fw-bold">
                            $@item.SalePrice
                            <span class="text-muted text-decoration-line-through fw-normal ms-2">$@item.Price</span>
                        </p>
                    }
                    else
                    {
                        <p class="card-text fw-bold">$@item.Price</p>
                    }
                </div>
            </div>
        </div>
    }
</div>