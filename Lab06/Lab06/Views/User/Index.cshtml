@model IEnumerable<Lab06.Models.User>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="container mt-4">
    <h2>Quản lý người dùng (Bài 2)</h2>

    <div class="card p-3 mb-4">
        <h4>Thêm người dùng mới</h4>
        <form asp-action="AddUser" method="post" class="d-flex gap-2">
            <input type="text" name="userName" class="form-control" placeholder="Nhập tên người dùng..." required />
            <button type="submit" class="btn btn-success">Thêm</button>
        </form>
    </div>

    <h4>Danh sách người dùng</h4>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>