@model Bai02.Models.Order

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    // Ép kiểu ViewBag.Details về danh sách OrderDetail
    var details = ViewBag.Details as IEnumerable<Bai02.Models.OrderDetail>;
}

<h1>Chi tiết đơn hàng</h1>

<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        Thông tin chung
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-2">Mã đơn hàng:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderId)</dd>

            <dt class="col-sm-2">Ngày đặt:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderDate)</dd>

            <dt class="col-sm-2">Khách hàng:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.CustomerName)</dd>

            <dt class="col-sm-2">Tổng tiền:</dt>
            <dd class="col-sm-10 fw-bold text-danger">@Model.TotalAmount.ToString("N0") VND</dd>
        </dl>
    </div>
</div>

<h4 class="mt-4">Chi tiết sản phẩm</h4>
<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Mã SP</th>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @if (details != null && details.Any())
        {
            foreach (var item in details)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("N0")</td>
                    <td>@((item.Quantity * item.UnitPrice).ToString("N0"))</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Không có chi tiết sản phẩm</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>