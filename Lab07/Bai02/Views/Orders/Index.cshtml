@model IEnumerable<Bai02.Models.Order>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
}

<h1 class="mb-3">Danh sách đơn hàng</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Tạo đơn hàng mới
    </a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.OrderId)</th>
            <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
            <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
            <th>@Html.DisplayNameFor(model => model.TotalAmount)</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.OrderId)</td>
                <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                <td>@item.TotalAmount.ToString("N0") VND</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-info btn-sm text-white">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>